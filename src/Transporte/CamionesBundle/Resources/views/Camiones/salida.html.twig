{% extends 'CoreBundle:Default:backend.html.twig' %}

{% form_theme form 'CoreBundle:Form:bootstrap_3_layout.html.twig' %}

{% block pageHeader %}Salida de camiones{% endblock %}

{% block iconPageHeader %}arrow-left{% endblock %}

{% block widgetName %}Salida de camiones{% endblock %}

{% block widgetIcon %}truck{% endblock %}

{% block widgetBody %}

    {{ form_start(form, {'attr': {'id': 'salida-form'}}) }}
        <fieldset>
            {% include "CamionesBundle:Camiones:tractor_form.html.twig" %}
        </fieldset>

        {% include 'CoreBundle:Default:bootstrap_form_actions.html.twig' with {
                    'hide_submit' : true,
                    'other_actions' : [
                        { 'path' : 'javascript:void(0);', 'text' : 'Informar Terminal', 'id' : 'informar_terminal', 'classes' : 'btn btn-primary', 'icon' : 'bell-o' }
                    ]
                }
        %}

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/camiones/js/widgets.js') }}"></script>

    <script>
        $(function() {
            new SalidaWidget({
                tractorInputId : "#transporte_camionesbundle_salida_tractor_patente"
            });
        });
    </script>
{% endblock %}