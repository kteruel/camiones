{% extends 'CoreBundle:Default:backend.html.twig' %}

{% form_theme form 'CoreBundle:Form:bootstrap_3_layout.html.twig' %}

{% block pageHeader %}Salida de camiones{% endblock %}

{% block iconPageHeader %}arrow-left{% endblock %}

{% block widgetName %}Salida de camiones{% endblock %}

{% block widgetIcon %}truck{% endblock %}

{% block widgetBody %}

    {{ form_start(form, {'attr': {'id': 'salida-form'}}) }}
        <fieldset>
            {% include "CamionesBundle:Camiones:tractor_form.html.twig" %}
        </fieldset>

        {% include 'CoreBundle:Default:bootstrap_form_actions.html.twig' with {'submit_text' : 'Aviso Terminal', 'submit_icon' : 'bell-o'} %}

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/camiones/js/my_functions.js') }}"></script>
    <script>
    $(function() {
        dontUseEnterInForm();
        addTractorFormListener("#transporte_camionesbundle_salida_tractor_patente", "{{ path('buscar_tractor') }}");
    });
    </script>
{% endblock %}