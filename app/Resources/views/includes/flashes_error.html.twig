
{% set tipo_mensajes = app.session.flashBag.all %}
{% if tipo_mensajes|length > 0 %}
    {% for key,  messages in tipo_mensajes %}
        {% for  message in messages %}
        {% if key == "error" %}
        <div class="alert alert-{{ key }} alert-danger">
                {{ message |raw}}
        </div>
        {% endif %}
        {% endfor %}
    {% endfor %}
{% endif %}

